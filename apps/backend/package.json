{
  "name": "backend",
  "version": "0.0.0",
  "description": "Backend service for Conduit",
  "keywords": [],
  "license": "LGPL-3.0-or-later",
  "author": "Jaime Leonardo Suncin Cruz",
  "type": "module",
  "bin": {
    "check": "dist/health-check.js"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "dev": "pnpm fastify start --watch --log-level info --pretty-logs src/app.ts",
    "fastify": "cross-env NODE_OPTIONS=\"--import=tsx\" FASTIFY_AUTOLOAD_TYPESCRIPT=1 fastify",
    "start": "fastify start --log-level info dist/app.js",
    "test": "tsx --test --enable-source-maps tests/**/*.{spec,test}.ts"
  },
  "dependencies": {
    "@conduit/data-access-layer": "workspace:^",
    "@fastify/autoload": "^6.0.0",
    "@fastify/awilix": "^7.0.0",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.4.2",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@scalar/fastify-api-reference": "^1.28.14",
    "@sinclair/typebox": "^0.34.33",
    "awilix": "^12.0.5",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.4.0",
    "fastify-custom-healthcheck": "^4.0.0",
    "fastify-plugin": "^5.0.0",
    "http-status-codes": "^2.3.0",
    "postgres": "^3.4.5",
    "read-pkg": "^9.0.1"
  },
  "devDependencies": {
    "@devoxa/integresql-client": "^2.1.1",
    "@types/node": "^22.1.0",
    "c8": "^10.1.2",
    "cross-env": "^7.0.0",
    "execa": "^9.5.2",
    "fastify-tsconfig": "^3.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.2"
  }
}
